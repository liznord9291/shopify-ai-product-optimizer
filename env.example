# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SCOPES=write_products,read_products
SHOPIFY_APP_URL=https://your-app-domain.com

# Database Configuration
# Development (SQLite)
DATABASE_URL=file:./dev.sqlite

# Production (PostgreSQL - Railway will provide this)
# DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Judge.me Integration (Optional - for enhanced review analysis)
# Get your API token from Judge.me dashboard > API > API Token
# JUDGE_ME_API_TOKEN=your_judge_me_api_token_here

# Session Storage
SESSION_SECRET=your_secure_session_secret_here

# Environment
NODE_ENV=production

# Custom Shop Domain (Optional)
# SHOP_CUSTOM_DOMAIN=your-custom-domain.com

# Port Configuration (Optional)
PORT=3000
FRONTEND_PORT=8002

# Rate Limiting Configuration (Optional)
OPENAI_RATE_LIMIT=50
BULK_ANALYSIS_LIMIT=5 